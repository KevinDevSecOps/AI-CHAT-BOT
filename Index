const readline = require('readline-sync');

console.log("ðŸ¤– Â¡Hola! Soy tu chatbot de IA simple. Escribe 'salir' para terminar.\n");

const respuestas = [
  { palabras: ["hola", "buenas"], respuesta: "Â¡Hola! Â¿En quÃ© puedo ayudarte?" },
  { palabras: ["nombre"], respuesta: "Me llamo IA Simple, tu asistente virtual." },
  { palabras: ["adios", "despedida"], respuesta: "Â¡Hasta pronto! ðŸ‘‹" },
  { palabras: ["clima", "tiempo"], respuesta: "No puedo ver el clima aÃºn, Â¡pero puedo conversar contigo!" },
  { palabras: ["ayuda"], respuesta: "Puedes preguntarme sobre mi nombre, saludar, o decir adiÃ³s." }
];

function obtenerRespuesta(mensaje) {
  mensaje = mensaje.toLowerCase();
  for (const item of respuestas) {
    if (item.palabras.some(palabra => mensaje.includes(palabra))) {
      return item.respuesta;
    }
  }
  return "No entendÃ­ eso, Â¡pero sigo aprendiendo! ðŸ˜Š";
}

while (true) {
  const entrada = readline.question("> ");
  if (entrada.toLowerCase() === "salir") {
    console.log("Â¡Hasta luego!");
    break;
  }
  const respuesta = obtenerRespuesta(entrada);
  console.log(respuesta);
}
